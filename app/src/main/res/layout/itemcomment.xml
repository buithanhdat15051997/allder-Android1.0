<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_edittext_register"
    android:layout_marginTop="@dimen/_10ssp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avata"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@+id/line1"
        android:onClick="onClick"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_avata" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avata"
        android:orientation="vertical"
        android:padding="@dimen/_10ssp">

        <TextView
            android:id="@+id/txtnameusers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="quốc mạnh"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/ratingBar_over"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5" />
            <TextView
                android:id="@+id/txtnumberrating"
                android:layout_marginLeft="@dimen/_3sdp"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtcomment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5ssp"
            android:text="good"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:id="@+id/imagelike"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_like"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>