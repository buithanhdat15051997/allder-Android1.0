<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:paddingVertical="@dimen/_8ssp"
            android:src="@drawable/ic_logotext" />

        <TextView
            android:id="@+id/txtpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/btnpay"
            android:fontFamily="@font/concert_one"
            android:text="0 Point"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageButton
            android:id="@+id/btnpay"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_account_balance_wallet_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginHorizontal="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_10ssp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/imgfilterHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10ssp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_filter" />

        <LinearLayout
            android:id="@+id/relative_toolbar_home"
            android:layout_width="@dimen/_400sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/scanqr"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/imgfilterHome"
            android:background="@color/white">
            <ImageView
                app:srcCompat="@drawable/ic_search_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/scanqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10ssp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_scanqr" />
    </RelativeLayout>


</RelativeLayout>