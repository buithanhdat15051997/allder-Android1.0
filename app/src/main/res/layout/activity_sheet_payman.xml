<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/linearlayoutpayment"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@android:color/white"    android:orientation="vertical"    android:paddingTop="@dimen/activity_vertical_margin">    <TextView        android:background="#EBE7E7"        android:id="@+id/textView"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="10dp"        android:gravity="center"        android:text="Select Payment Method"        android:textColor="@color/title_color"        android:textSize="18sp"        android:textStyle="bold"/>   <LinearLayout       android:orientation="vertical"       android:layout_width="match_parent"       android:layout_height="wrap_content">       <LinearLayout           android:id="@+id/carddebit"           android:background="@drawable/custom_edittext_register"           android:orientation="horizontal"           android:layout_width="match_parent"           android:layout_height="wrap_content">           <ImageView               android:padding="@dimen/_5sdp"               android:src="@drawable/carddebit"               android:layout_width="50dp"               android:layout_height="50dp" />           <TextView               android:layout_marginLeft="@dimen/_10sdp"               android:layout_gravity="center"               android:text="Card Credit"               android:textSize="@dimen/_15sdp"               android:layout_width="match_parent"               android:layout_height="wrap_content" />       </LinearLayout>       <LinearLayout           android:id="@+id/cardCre"           android:background="@drawable/custom_edittext_register"           android:orientation="horizontal"           android:layout_width="match_parent"           android:layout_height="wrap_content">      <ImageView          android:padding="@dimen/_5sdp"          android:src="@drawable/credit_card"          android:layout_width="50dp"          android:layout_height="50dp" />           <TextView              android:layout_marginLeft="@dimen/_10sdp"               android:layout_gravity="center"               android:text="card"               android:textSize="@dimen/_15sdp"               android:layout_width="match_parent"               android:layout_height="wrap_content" />       </LinearLayout>       <LinearLayout           android:layout_marginTop="@dimen/_5sdp"           android:id="@+id/qr"           android:background="@drawable/custom_edittext_register"           android:orientation="horizontal"           android:layout_width="match_parent"           android:layout_height="wrap_content">           <ImageView               android:padding="@dimen/_5sdp"               android:src="@drawable/qrnets"               android:layout_width="50dp"               android:layout_height="50dp" />           <TextView               android:layout_marginLeft="@dimen/_10sdp"               android:layout_gravity="center"               android:text="NETS QR"               android:textSize="@dimen/_15sdp"               android:layout_width="match_parent"               android:layout_height="wrap_content" />       </LinearLayout>   </LinearLayout></LinearLayout>