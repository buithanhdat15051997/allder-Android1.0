<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity.GameBox">
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/ln"
        android:layout_below="@+id/txtTotalBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewPointBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            /></RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/ln"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@drawable/buttontamgiac"
            android:layout_weight="2"
            android:id="@+id/buttonbox1"
            android:onClick="ClickButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text=""
            android:layout_marginLeft="15dp"
            />
        <ImageButton
            android:background="@drawable/buttonoval"
            android:layout_weight="2"
            android:onClick="ClickButton"
            android:id="@+id/buttonbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/buttonbox1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text=""
            android:layout_marginLeft="15dp"
            />
        <ImageButton
            android:background="@drawable/buttonrec"
            android:layout_weight="2"
            android:onClick="ClickButton"
            android:id="@+id/buttonbox3"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/buttonbox2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>

</RelativeLayout>